<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HLDGL"
    android:orientation="vertical">
    <LinearLayout
        android:background="#3e51b5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/HLD_caidan"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/caidanfz"/>
        <TextView
            android:layout_marginLeft="400dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红绿灯管理"
            android:textColor="#ffffff"
            android:textSize="60sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="排序:"
            android:textColor="@color/black"/>
        <Spinner
            android:layout_gravity="center"
            android:id="@+id/HLD_xialia"
            android:layout_width="600dp"
            android:layout_height="80dp"
            android:entries="@array/xialia"/>
        <Button
            android:id="@+id/HLD_anniu1"
            android:layout_marginLeft="120dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="查询"
            android:textSize="30sp"
            android:background="@drawable/beij2"/>
        <Button
            android:id="@+id/HLD_anniu2"
            android:layout_marginLeft="60dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="批量查询"
            android:textSize="30sp"
            android:background="@drawable/beij2"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.8"
                android:text="路口"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/beij1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.8"
                android:text="红灯时长"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/beij1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.8"
                android:text="黄灯时长"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/beij1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.8"
                android:text="绿灯时长"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/beij1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.85"
                android:gravity="center"
                android:background="@drawable/beij1"
                android:text="操作项"
                android:textSize="30sp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:background="@drawable/beij1"
                android:text="设置"
                android:textSize="30sp"/>
        </LinearLayout>
        <ListView
            android:id="@+id/HLD_list"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"/>
    </RelativeLayout>
</LinearLayout>